@{
  Layout = "_Layout";
}

@using Hospital.Models;

@model List<Hospital.Models.Doctor>;
<h1>Doctors</h1>
@if (Model.Count == 0)
{
  <h3>No Doctor have been added yet</h3>
}
@foreach (Doctor doctor in Model)
{
  <li>@Html.ActionLink($"{doctor.DoctorName}", "Details", new { id = doctor.DoctorId} )</li>
}

<p>@Html.ActionLink("Add new doctor", "Create", null, null, new { @class = "btn btn-success btn-sm"})</p>

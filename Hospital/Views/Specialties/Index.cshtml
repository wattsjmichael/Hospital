@{
  Layout = "_Layout";
}

@using Hospital.Models;

@model List<Hospital.Models.Specialty>;
<h1>Specialties</h1>
@if (Model.Count == 0)
{
  <h3>No Specialties have been added yet</h3>
}
@foreach (Specialty specialty in Model)
{
  <li>@Html.ActionLink($"{specialty.SpecialtyName}", "Details", new { id = specialty.SpecialtyId} )</li>
}

<p>@Html.ActionLink("Add a new specialty", "Create", null, null, new { @class = "btn btn-success btn-sm"})</p>
